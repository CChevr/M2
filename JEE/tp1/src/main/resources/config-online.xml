<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="standardDelivery" class="fr.uge.jee.onlineshop.ClassicShipping">
        <constructor-arg  value="5"/>
    </bean>
    <bean id="droneShipping" class="fr.uge.jee.onlineshop.DroneShipping" />

    <bean id="returnInsurance" class="fr.uge.jee.onlineshop.ReturnInsurance">
        <constructor-arg value="1" />
    </bean>

    <bean id="onlineShop" class="fr.uge.jee.onlineshop.OnlineShop">
        <property name="name" value="Amazon" />
        <property name="deliveryOption">
            <set>
                <ref bean="droneShipping"/>
                <ref bean="standardDelivery"/>
            </set>
        </property>
        <property name="insurance">
            <set>
                <ref bean="returnInsurance"/>
            </set>
        </property>
    </bean>
</beans>
