connect database
sudo -u postgres psql

lancer zookeeper
zkServer.sh start

supprimer topic
./kafka-topics.sh --bootstrap-server localhost:9092,localhost:9093,localhost:9094 --delete -–topic tpcluster

lancer le serveur Kafka
./kafka-server-start.sh -daemon ../config/server.properties

Créer un topic tpdrugs sur le port 9092
./kafka-topics.sh --bootstrap-server localhost:9092 --replication-factor 1 --partitions 1 --create --topic tpdrugs

Créer une consumer sur le topic tpdrugs écoutant le port 9092
./kafka-console-consumer.sh --bootstrap-server localhost:9092 --topic tpdrugs

Lire les infos du topic tpdrugs
./kafka-topics.sh --bootstrap-server localhost:9092 --describe --topic tpdrugs

Lire l'offset sur le topic tpdrugs
./kafka-run-class.sh kafka.tools.GetOffsetShell --bootstrap-server localhost:9092 --topic tpdrugs


GROUPE 3
Lancer les 3 bokers
./kafka-server-start.sh -daemon ../config/server.properties
./kafka-server-start.sh -daemon ../config/server2.properties
./kafka-server-start.sh -daemon ../config/server3.properties

Creer un nouveau topic
    replica factor 3 + partitions 3
./kafka-topics.sh --bootstrap-server localhost:9092,localhost:9093,localhost:9094 --replication-factor 3 --partitions 3 --create --topic tpcluster
./kafka-topics.sh --bootstrap-server localhost:9092,localhost:9093,localhost:9094 --replication-factor 3 --partitions 3 --create --topic top2

écrouter les 3 topics
./kafka-console-consumer.sh --bootstrap-server localhost:9092 --topic tpcluster
./kafka-console-consumer.sh --bootstrap-server localhost:9093 --topic tpcluster
./kafka-console-consumer.sh --bootstrap-server localhost:9094 --topic tpcluster

./kafka-console-consumer.sh --bootstrap-server localhost:9092,localhost:9093,localhost:9094 --topic top2

